% Requirements
\RequirePackage[T1]{fontenc}
\RequirePackage{color}
\RequirePackage{tikz}
\RequirePackage{xcolor}
\RequirePackage{fontspec}
\RequirePackage{calc}

% Font
\usefonttheme{professionalfonts}
\usefonttheme{serif}
\setmainfont{Proxima Nova}
% \setmainfont{Times New Roman}

% Variables
\newdimen{\edgespacing}
\setlength{\edgespacing}{3mm}

% Settings
\usecolortheme{michael}
\usefonttheme{michael}
\useinnertheme{michael}
\useoutertheme{michael}
% \usepackage{theme/beamercolorthememichael}
% \usepackage{theme/beamerfontthememichael}
