%-------------------------
% Defines the fonts and sizes used in various parts of the theme
%-------------------------

\mode<presentation>

% Footer (outer theme)
\setbeamerfont{footer text}{size=\tiny, series=\mdseries}

% Slide titles (outer theme)
\setbeamerfont{frametitle}{size=\huge, series=\mdseries}

% Title page (inner theme)
\setbeamerfont{title}{size=\Huge, series=\bfseries}
\setbeamerfont{subtitle}{size=\LARGE, series=\mdseries}
\setbeamerfont{author}{size=\Large, series=\bfseries}
\setbeamerfont{authorgroup}{size=\large}

% Section pages (inner theme)
\setbeamerfont{section title}{size=\LARGE, series=\bfseries}
\setbeamerfont{subsection title}{size=\Large, series=\mdseries}

% Table of contents (inner theme)
\setbeamerfont{section in toc}{size=\Large}
\setbeamerfont{subsection in toc}{size=\large}

\mode<all>