%-------------------------
% Defines the colors used in various parts of the theme, e.g.,the color for frame titles or the background color
%-------------------------

\mode<presentation>

% Custom colours
\definecolor{primary}{HTML}{2c2c2e}
\definecolor{secondary}{HTML}{f0da9d}
\definecolor{textcolor}{HTML}{2c2c2e}
\definecolor{lighttextcolor}{HTML}{636366}
\definecolor{accent1}{HTML}{45b0dc}
\definecolor{accent2}{HTML}{18aa9e}
\definecolor{accent3}{HTML}{f68e2f}
\definecolor{accent4}{HTML}{c62127}
\definecolor{accent5}{HTML}{802392}

% Text
\setbeamercolor{normal text}{fg=textcolor}

% Title page
\setbeamercolor{title}{fg=secondary}
\setbeamercolor{title separation line}{bg=secondary}

% Footer
\setbeamercolor{footer text}{bg=primary, fg=secondary}

% Slide titles
\setbeamercolor{frametitle}{fg=primary}
\setbeamercolor{frametitle separation line}{bg=primary}

% Itemize
\setbeamercolor*{itemize item}{fg=primary}
\setbeamercolor*{itemize subitem}{fg=primary}
\setbeamercolor*{itemize subsubitem}{fg=primary}

% Enumerate
\setbeamercolor*{enumerate item}{fg=primary}
\setbeamercolor*{enumerate subitem}{fg=primary}
\setbeamercolor*{enumerate subsubitem}{fg=primary}

\mode<all>