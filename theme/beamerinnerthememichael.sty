%-------------------------
% Defines the appearance of any items that make up the slides central content e.g., lists or the title on the title page
%-------------------------

\mode<presentation>

% Itemize
\defbeamertemplate*{itemize item}{michael}{\usebeamerfont*{itemize item}\raise1pt\hbox{\donotcoloroutermaths$\bullet$}}
\defbeamertemplate*{itemize subitem}{michael}{\usebeamerfont*{itemize subitem}\raise1.25pt\hbox{\donotcoloroutermaths$\circ$}}
\defbeamertemplate*{itemize subsubitem}{michael}{\usebeamerfont*{itemize subsubitem}\raise1pt\hbox{\donotcoloroutermaths$\boldsymbol{-}$}}

% Enumerate
\defbeamertemplate*{enumerate item}{michael}{\insertenumlabel.}
\defbeamertemplate*{enumerate subitem}{michael}{\insertenumlabel.\insertsubenumlabel}
\defbeamertemplate*{enumerate subsubitem}{michael}{\insertenumlabel.\insertsubenumlabel.\insertsubsubenumlabel}

% Title page
\defbeamertemplate*{title page}{michael}[1][]
{
  \begin{tikzpicture}[remember picture,overlay]
    \node[at=(current page.center), fill=primary, minimum width=\paperwidth, minimum height=\paperheight] {};
  \end{tikzpicture}
  \vfill
  \begingroup
    \centering
    \begin{beamercolorbox}[left, leftskip=2\edgespacing, #1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\insertsubtitle\par}%
      \fi%
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=\paperwidth, colsep=0.75pt]{title separation line}\end{beamercolorbox}
    \vskip1em\par
    \begin{beamercolorbox}[left, leftskip=2\edgespacing, #1]{title}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \ifx\insertauthorgroup\@empty%
    \else%
      \begin{beamercolorbox}[left, leftskip=2\edgespacing, #1]{title}
        % \usebeamerfont{institute}\insertinstitute
        \vskip0.25em%
        \usebeamerfont{authorgroup}\insertauthorgroup
      \end{beamercolorbox}
    \fi%
  \endgroup
}

% Section page
\defbeamertemplate*{section page}{michael}[1][]
{
  \begin{tikzpicture}[remember picture,overlay]
    \node[at=(current page.center), fill=primary, minimum width=\paperwidth, minimum height=\paperheight] {};
  \end{tikzpicture}
  \vfill
  \begingroup
    \begin{beamercolorbox}[left, leftskip=2\edgespacing, #1]{title}
      \usebeamerfont{section title}\insertsectionnumber.~\insertsection\par%
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=\paperwidth, colsep=0.75pt]{title separation line}\end{beamercolorbox}
  \endgroup
}

% Subsection page (near duplicate of section page)
\defbeamertemplate*{subsection page}{michael}[1][]
{
  \begin{tikzpicture}[remember picture,overlay]
    \node[at=(current page.center), fill=primary, minimum width=\paperwidth, minimum height=\paperheight] {};
  \end{tikzpicture}
  \vfill
  \begingroup
    \begin{beamercolorbox}[left, leftskip=2\edgespacing, #1]{title}
      \usebeamerfont{subsection title}\insertsectionnumber.\insertsubsectionnumber.~\insertsubsection\par%
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=\paperwidth, colsep=0.75pt]{title separation line}\end{beamercolorbox}
  \endgroup
}

% Table of contents
% \setbeamertemplate{section in toc}[sections numbered]
% \setbeamertemplate{subsection in toc}[subsections numbered]

\defbeamertemplate*{section in toc}{michael}
{\leavevmode\inserttocsectionnumber.~~\inserttocsection\par}

\defbeamertemplate*{subsection in toc}{michael}
{\leavevmode\leftskip=1.5em\inserttocsectionnumber.\inserttocsubsectionnumber.~~\inserttocsubsection\par}


\mode<all>